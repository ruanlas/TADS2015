<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/lbl_titulo" />

    <EditText
        android:id="@+id/edtTxtIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnClassificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtIdade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="classificar"
        android:text="@string/btn_classificar" />

    <TextView
        android:id="@+id/txtViewCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnClassificar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="@string/txt_em_branco"
        android:textSize="24sp" />
</RelativeLayout>
