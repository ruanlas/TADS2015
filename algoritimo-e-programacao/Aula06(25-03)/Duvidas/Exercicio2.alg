algoritmo "exercício2"
// Função :
// Autor :
// Data : 25/03/2015
// Seção de Declarações 
var
numero: inteiro
inicio
      escreval ("Pense em um número e digite:")
      leia (numero)
      se (numero) mod 2 = 0 entao
         escreval ("Número Par")
      senao
           escreval("Número Ímpar")
      fimse
fimalgoritmo
